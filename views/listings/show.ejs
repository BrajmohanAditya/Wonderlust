

<% layout("/layouts/boilerplate") %>

<div class="container">
  <div class="row mt-4">
    <div class="col-md-8 mx-auto">
      <!-- Title -->
      <h3 class="mb-3 fw-bold " style="margin-left: 2rem"><%= listing.title %></h3>

      <!-- Listing Image + Details -->
      <div class="card mb-4 show-card listing-card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top rounded"
          alt="listing_image"
          style="max-height: 250px; object-fit: cover;"
        />
        <div class="card-body">
          <p class="card-text"><i><%= listing.owner.username %></i></p>
          <p class="card-text">&#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : ""%></p>
          <p class="card-text"><%= listing.location %></p>
          <p class="card-text"><%= listing.country %></p>
        </div>
      </div>

      <!-- Buttons if owner -->
      <% if (currUser && listing.owner._id.equals(currUser._id)) { %>
        <div class="d-flex justify-content-start gap-3 mb-4">
          <a href="/listings/<%= listing.id %>/edit" class="btn btn-outline-primary px-4">Edit</a>
          <form method="POST" action="/listings/<%= listing.id %>?_method=DELETE">
            <button class="btn btn-danger">Delete</button>
          </form>
        </div>
      <% } %>

      <!-- Leave a Review -->
      <% if (currUser) { %>
        <h4>Leave a review</h4>
        <form
          action="/listings/<%= listing.id %>/reviews"
          method="POST"
          class="needs-validation mb-4"
          novalidate
        >
          <div class="mb-3 mt-3">
            <label for="rating" class="form-label">Rating</label>
            <input
              type="range"
              min="1"
              max="5"
              id="rating"
              name="review[rating]"
              class="form-range"
            />
          </div>
          <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea
              name="review[comment]"
              id="comment"
              cols="30"
              rows="4"
              class="form-control"
              required
            ></textarea>
          </div>
          <button class="btn btn-primary px-4">Submit</button>
        </form>
      <% } %>

      <!-- All Reviews -->
      <h4>All Reviews</h4>
      <div class="row">
        <% for (let review of listing.reviews) { %>
          <div class="col-md-6 mb-3">
            <div class="card h-100">
              <div class="card-body d-flex flex-column justify-content-between">
                <h5 class="card-title">@<%= review.author.username %></h5>
                <p class="card-text"><%= review.comment %></p>
                <p class="card-text">Rating: <%= review.rating %></p>
                <form
                  method="POST"
                  action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                > 
                <button class="btn btn-sm btn-outline-danger px-3">Delete</button>
                </form>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
